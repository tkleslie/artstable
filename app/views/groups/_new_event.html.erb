<h2>Add a new event:</h2>

<% form_for(event) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :group_id %>

  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :venue_id %><br />
    <%= f.text_field :venue_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :student %><br />
    <%= f.text_field :student %>
  </p>
  <p>
    <%= f.label :senior %><br />
    <%= f.text_field :senior %>
  </p>
  <p>
    <%= f.label :box_office_id %><br />
    <%= f.text_field :box_office_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>